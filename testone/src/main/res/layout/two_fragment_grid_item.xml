<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/two_fragment_iv"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/a4" />

            <TextView
                android:id="@+id/two_fragment_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/two_fragment_iv"
                android:layout_margin="10dp"
                android:singleLine="true"
                android:text="迷你干衣机"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/two_fragment_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/two_fragment_title_tv"
                android:layout_margin="10dp"
                android:text="128.00"
                android:textColor="@color/red"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/two_fragment_heart_iv"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignBottom="@+id/two_fragment_num_tv"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/two_fragment_num_tv"
                android:src="@mipmap/ic_feed_favourite_normal" />

            <TextView
                android:id="@+id/two_fragment_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/two_fragment_price_tv"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="25577"
                android:textColor="@color/gray"
                android:textSize="10sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
