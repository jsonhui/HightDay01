<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".frg.TwoOfThreeFragment">

    <ListView
        android:id="@+id/classify_single_tab"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="#3cf2e8e8"
        android:divider="@null"
        android:scrollbars="none" />

    <com.yuanke.liwushuo.custom.CustomViewPager
        android:id="@+id/classify_single_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/classify_single_tab" />

</RelativeLayout>
