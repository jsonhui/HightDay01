<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".act.HomeActivity">


    <FrameLayout
        android:id="@+id/home_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/home_line" />

    <View
        android:id="@+id/home_line"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_above="@+id/home_rg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray" />

    <RadioGroup
        android:id="@+id/home_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/home_rg_one"
            style="@style/CustomRadioButton"
            android:drawableTop="@drawable/selecter_radio_one"
            android:text="指南" />

        <RadioButton
            android:id="@+id/home_rg_two"
            style="@style/CustomRadioButton"
            android:drawableTop="@drawable/selecter_radio_two"
            android:text="热门" />

        <RadioButton
            android:id="@+id/home_rg_three"
            style="@style/CustomRadioButton"
            android:drawableTop="@drawable/selecter_radio_three"
            android:text="分类" />

        <RadioButton
            android:id="@+id/home_rg_four"
            style="@style/CustomRadioButton"
            android:drawableTop="@drawable/selecter_radio_four"
            android:text="我的" />
    </RadioGroup>
</RelativeLayout>
