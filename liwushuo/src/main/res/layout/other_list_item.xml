<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/other_list_item_tv_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/ohter_list_item_textview"
        android:padding="2dp"
        android:text="数码"
        android:textColor="@color/red"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/other_list_item_tv_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/other_list_item_tv_one"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/other_list_item_tv_one"
        android:text="数码家"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/other_list_item_tv_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/other_list_item_tv_two"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:text="爱因烧钱"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/other_list_item_circle_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/other_list_item_tv_two"
        android:layout_toLeftOf="@+id/other_list_item_tv_three"
        app:civ_border_color="@color/green"
        app:civ_border_width="0dp" />
    <!--<com.makeramen.roundedimageview.RoundedImageView -->
    <!--android:id="@+id/other_list_item_circle_image"-->
    <!--android:layout_width="20dp"-->
    <!--android:layout_height="20dp"-->
    <!--android:layout_alignBottom="@+id/other_list_item_tv_two"-->
    <!--android:layout_toLeftOf="@+id/other_list_item_tv_three"-->
    <!--android:scaleType="fitXY"-->
    <!--app:riv_border_color="#333333"-->
    <!--app:riv_border_width="0dip"-->
    <!--app:riv_corner_radius="30dip"-->
    <!--app:riv_mutate_background="true"-->
    <!--app:riv_oval="true"-->
    <!--app:riv_tile_mode="repeat" />-->

    <ImageView
        android:id="@+id/other_list_item_iv"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/other_list_item_tv_one"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/other_list_item_tv_four"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/other_list_item_iv"
        android:layout_margin="10dp"
        android:padding="2dp"
        android:singleLine="true"
        android:text="第17期 | 拥有这些,你才配叫手机狂魔"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/other_list_item_iv_heart"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/other_list_item_tv_five"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/other_list_item_tv_five"
        android:src="@mipmap/ic_feed_favourite_normal" />

    <TextView
        android:id="@+id/other_list_item_tv_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/other_list_item_tv_four"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="25577"
        android:textColor="@color/black"
        android:textSize="10sp" />
</RelativeLayout>
