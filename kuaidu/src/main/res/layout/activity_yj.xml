<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_yj"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qmxy.kuaidu.act.YjActivity">

    <Button
        android:id="@+id/yj_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/black"
        android:drawableLeft="@drawable/selecter_back"
        android:gravity="left|center_vertical"
        android:text="  意见"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/yj_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yj_button"
        android:layout_margin="10dp"
        android:background="@drawable/edit_tj"
        android:gravity="top"
        android:hint="提交意见字数控制在500字以下！"
        android:lines="6" />

    <Button
        android:id="@+id/tijiao_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/yj_edit"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_tj"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="25sp" />
</RelativeLayout>
