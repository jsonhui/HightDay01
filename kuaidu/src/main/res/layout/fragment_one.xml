<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qmxy.kuaidu.frg.OneFragment">

    <RelativeLayout
        android:id="@+id/rl_one"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#0e0e0e">

        <TextView
            android:id="@+id/zx_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:text="资讯"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/time_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:text="2016年10月9号 星期五"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/one_fragment_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_one"
        android:padding="2dp"
        app:tabIndicatorColor="@color/red"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/black"
        app:tabTextColor="@color/black" />

    <android.support.v4.view.ViewPager
        android:id="@+id/one_fragment_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/one_fragment_tab" />
</RelativeLayout>
